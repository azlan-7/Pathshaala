<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected state (currently being typed in) -->
    <item android:color="@color/line_selected" android:state_selected="true" />
    <!-- Focused state (when input field is focused) -->
    <item android:color="@color/line_focused" android:state_focused="true" />
    <!-- Default state (unfocused and unselected) -->
    <item android:color="#1674AE" />

</selector>