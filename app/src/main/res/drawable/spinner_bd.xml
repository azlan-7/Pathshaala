<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Light Gray when pressed -->
            <corners android:radius="10dp"/> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#1674AE"/> <!-- Blue border -->
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White background -->
            <corners android:radius="10dp"/> <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="#1674AE"/> <!-- Blue border -->
        </shape>
    </item>

</selector>
