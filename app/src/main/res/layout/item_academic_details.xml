<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textGradeEnrolled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade Enrolled: "
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textYearOfPassing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year of Passing: "
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textLearningStream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learning Stream: "
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textSelectBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Board: "
            android:textSize="14sp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
