<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Existing TextViews, now with ConstraintLayout constraints -->
        <TextView
            android:id="@+id/tvSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/work_sans_extrabold"
            android:text="Sent By: "
            android:textColor="#666666"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/work_sans"
            android:text="Created At...."
            android:textColor="#0F4D73"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSender" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/work_sans"
            android:text="Notification Title"
            android:textColor="#0F4D73"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTimeStamp" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/work_sans"
            android:text="Notification message..."
            android:textColor="#0F4D73"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <!-- Time Table Button -->

        <!-- Notification Button -->

        <LinearLayout
            android:id="@+id/linearLayoutTimeTable"
            android:layout_width="98dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="148dp"
            android:background="@drawable/cornered_button"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMessage">
            <!-- Note: Changed original 'tvLocation' constraint to 'tvMessage' for logical placement
                       within this notification item's existing elements. -->

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/calendar_month_24dp_ffffff_fill0_wght400_grad0_opsz24" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tvTimeTableButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/work_sans_bold"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="0dp"
                android:text="Time Table"
                android:textColor="@color/white"
                android:textSize="9sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutNotification"
            android:layout_width="98dp"
            android:layout_height="46dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/cornered_button"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.818"
            app:layout_constraintStart_toEndOf="@+id/linearLayoutTimeTable"
            app:layout_constraintTop_toTopOf="@+id/linearLayoutTimeTable">
            <!-- Aligned top with the Time Table button for consistent vertical positioning -->

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/profile_icon_no_bg" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tvNotificationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/work_sans_bold"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="0dp"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="9sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayoutReply"
            android:layout_width="98dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/cornered_button"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            app:layout_constraintEnd_toStartOf="@+id/linearLayoutTimeTable"
            app:layout_constraintTop_toBottomOf="@+id/tvMessage">
            <!-- Aligned top with the Time Table button for consistent vertical positioning -->

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/reply_24dp_ffffff_fill0_wght400_grad0_opsz24" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tvReplyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/work_sans_bold"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="0dp"
                android:text="Reply"
                android:textColor="@color/white"
                android:textSize="9sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
