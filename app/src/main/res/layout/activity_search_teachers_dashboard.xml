<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchTeachersDashboard">

    <!-- Toolbar (Increased Height) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/toolbar_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Pathshaala"
        app:titleTextAppearance="@style/ToolbarTitleStyle"
        app:titleTextColor="@android:color/white" />

    <!-- ScrollView for multiple cards -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/button36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Card 1 -->
        <include layout="@layout/student_card"
            android:id="@+id/cardStudent1"
            tools:studentName="John Doe"
            tools:grade="Grade: 10"
            tools:subjects="Learning: Math, Science"
            tools:location="Lucknow"/>

        <!-- Card 2 -->
        <include layout="@layout/student_card"
            android:id="@+id/cardStudent2"
            tools:studentName="Jane Doe"
            tools:grade="Grade: 8"
            tools:subjects="Learning: English, History"
            tools:location="Delhi"/>

        <!-- Card 3 -->
        <include layout="@layout/student_card"
            android:id="@+id/cardStudent3"
            tools:studentName="Arjun Kumar"
            tools:grade="Grade: 9"
            tools:subjects="Learning: Physics, Chemistry"
            tools:location="Mumbai"/>

        <!-- Card 4 -->
        <include layout="@layout/student_card"
            android:id="@+id/cardStudent4"
            tools:studentName="Sara Ali"
            tools:grade="Grade: 7"
            tools:subjects="Learning: Biology, Geography"
            tools:location="Bangalore"/>

        <!-- Card 5 -->
        <include layout="@layout/student_card"
            android:id="@+id/cardStudent5"
            tools:studentName="Dwight Shrute"
            tools:grade="Grade: 7"
            tools:subjects="Learning: History, Geography"
            tools:location="Jau"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

<!-- Save Button (Ensuring It's Visible) -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button36"
        android:layout_width="186dp"
        android:layout_height="55dp"
        android:layout_margin="16dp"
        android:background="@drawable/cornered_button"
        android:drawableRight="@drawable/filter_alt_24dp_ffffff_fill0_wght400_grad0_opsz24"
        android:fontFamily="@font/work_sans_bold"
        android:text="Filter"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
